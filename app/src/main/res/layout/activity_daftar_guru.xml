<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_daftar_guru"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juli_soep.sekolah.admin.DaftarGuru">



    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/green"
        android:layout_below="@+id/firstLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daftar"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayTransparant"
        android:layout_below="@+id/secondLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:fitsSystemWindows="true"
            android:gravity="center_vertical|center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/orange">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Guru"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_list"
                    android:background="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greenTransparant"/>

                <EditText
                    android:id="@+id/etNama"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Nama Lengkap"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:textColor="@color/blackText"
                    android:textSize="15dp"
                    android:maxLength="15"
                    android:background="@color/white"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenTransparant"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_list"
                    android:background="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greenTransparant"/>

                <EditText
                    android:id="@+id/etNuptk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="NUPTK"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:textColor="@color/blackText"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:maxLength="15"
                    android:background="@color/white"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenTransparant"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_list"
                    android:background="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greenTransparant"/>

                <EditText
                    android:id="@+id/etNik"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="NIK"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:textColor="@color/blackText"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:maxLength="15"
                    android:background="@color/white"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenTransparant"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_list"
                    android:background="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greenTransparant"/>

                <EditText
                    android:id="@+id/etTmptLahir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Tempat Lahir"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:textColor="@color/blackText"
                    android:textSize="15dp"
                    android:maxLength="15"
                    android:background="@color/white"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenTransparant"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_list"
                    android:background="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greenTransparant"/>

                <EditText
                    android:editable="true"
                    android:id="@+id/etTglLahir"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:hint="Tanggal Lahir"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:textColor="@color/blackText"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:maxLength="15"
                    android:background="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pickDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Pilih"
                        android:textSize="14dp"
                        android:textColorHint="@color/white"
                        android:fontFamily="sans-serif-condensed"
                        android:onClick="datePicker"
                        android:gravity="center"
                        android:background="@color/blue"/>
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenTransparant"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_list"
                    android:background="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greenTransparant"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <RadioGroup
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/radiogrupsex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:background="#94ffffff">

                        <RadioButton
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:text="Pria"
                            android:textColor="@color/blackText"/>

                        <RadioButton
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:text="Wanita"
                            android:textColor="@color/blackText"/>

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenTransparant"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_list"
                    android:background="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greenTransparant"/>

                <EditText
                    android:id="@+id/etPendTerakhir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Pendidikan Terakhir"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:textColor="@color/blackText"
                    android:textSize="15dp"
                    android:inputType="textMultiLine"
                    android:maxLength="15"
                    android:background="@color/white"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenTransparant"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_list"
                    android:background="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greenTransparant"/>

                <EditText
                    android:id="@+id/etTMT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Mulai Tugas / TMT"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:textColor="@color/blackText"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:maxLength="15"
                    android:background="@color/white"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenTransparant"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_list"
                    android:background="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greenTransparant"/>

                <EditText
                    android:id="@+id/etJabatan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Jabatan"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:textColor="@color/blackText"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:maxLength="15"
                    android:background="@color/white"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenTransparant"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_list"
                    android:background="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greenTransparant"/>

                <EditText
                    android:id="@+id/etStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Status"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:textColor="@color/blackText"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:maxLength="15"
                    android:background="@color/white"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenTransparant"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_list"
                    android:background="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greenTransparant"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <RadioGroup
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/radiogrupsertifikasi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:background="#94ffffff">

                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Sudah Sertifikasi"
                            android:textColor="@color/blackText"/>

                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Belum Sertifikasi"
                            android:textColor="@color/blackText"/>

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenTransparant"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_list"
                    android:background="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greenTransparant"/>

                <EditText
                    android:id="@+id/etAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Alamat"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:textColor="@color/blackText"
                    android:textSize="15dp"
                    android:inputType="textLongMessage"
                    android:maxLength="15"
                    android:background="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center">

                <Button
                    android:id="@+id/submit"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="Kirim"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_arrow"/>

                <Button
                    android:id="@+id/batal"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="BATAL"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_arrow_a"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
